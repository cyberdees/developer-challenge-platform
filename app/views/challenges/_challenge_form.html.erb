<div><label>Title</label><%= f.text_field :title %></div>
<div><label>Abstract</label><%= f.text_area :abstract %></div>
<div><label>Difficulty Level</label><%= f.select :level_id, options_for_select(Level.all.collect{|x| [x.name, x.id]}, f.object.level_id) %></div>
<div><label>Category</label><%= f.select :category_id, options_for_select(Category.all.collect{|x| [x.name, x.id]}, f.object.category_id) %></div>
<div><label>Platform</label><%= f.select :platform_id, options_for_select(Platform.all.collect{|x| [x.name, x.id]}, f.object.platform_id) %></div>
<div><label>Starts At</label><%= f.datetime_select :starts_at %></div>
<div><label>Ends At</label><%= f.datetime_select :ends_at %></div>
<div><label>Resources</label><%= f.text_area :resources %></div>